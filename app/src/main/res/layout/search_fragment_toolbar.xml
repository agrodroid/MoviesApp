<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchToolbar"
    android:layout_width="@dimen/dp_0"
    android:layout_height="@dimen/dp_64"
    app:contentInsetEnd="@dimen/dp_0"
    app:contentInsetStart="@dimen/dp_0"
    app:contentInsetStartWithNavigation="@dimen/dp_0"
    android:minHeight="?actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:showIn="@layout/fragment_search">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/searchToolbarEt"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:fontFamily="@font/titillium_web_regular"
            android:hint="@string/search_for_movies"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_48"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/sp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/searchToolbarClearButton"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_12"
            android:background="@null"
            android:scaleType="centerCrop"
            android:contentDescription="@string/clear_button"
            android:src="@drawable/search_cancel_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/searchToolbarEt"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>